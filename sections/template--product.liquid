<link
  rel="preload"
  href="{{ 'product-details.css' | asset_url }}"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
>

<div
  itemscope
  itemtype="http://schema.org/Product"
  data-wetheme-section-type="template--product"
  data-wetheme-section-id="{{ section.id }}"
>
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_media.preview_image | img_url: 'grande' }}">
  <meta itemprop="brand" content="{{ product.vendor }}">
  <meta itemprop="sku" content="{{ product.selected_or_first_available_variant.sku }}">

  {% assign pick_an_option = false %}

  {% if pick_an_option %}
    {%- assign current_variant = product.selected_variant -%}
  {% else %}
    {%- assign current_variant = product.selected_or_first_available_variant -%}
  {% endif %}

  {% assign on_sale = false %}
  {% if current_variant.compare_at_price > current_variant.price %}
    {% assign on_sale = true %}
  {% endif %}

  {%- assign product_description_width = '' -%}
  {%- assign product_image_width = '' -%}

  {% assign options_block = section.blocks | where: 'type', 'options' | first %}
  {% assign pickup_block = section.blocks | where: 'type', 'local_pickup' | first %}
  {% assign trust_block = section.blocks | where: 'type', 'trust_badges' | first %}
  {% assign giftwrap_block = section.blocks | where: 'type', 'giftwrap' | first %}
  {% assign buttons_block = section.blocks | where: 'type', 'buy_buttons' | first %}

  {% case section.settings.image_size %}
    {% when 'small' %}
      {%- assign product_description_width = 'large--seven-twelfths' -%}
      {%- assign product_image_width = 'large--five-twelfths' -%}
    {% when 'medium' %}
      {%- assign product_description_width = 'large--six-twelfths' -%}
      {%- assign product_image_width = 'large--six-twelfths' -%}
    {% when 'large' %}
      {%- assign product_description_width = 'large--five-twelfths' -%}
      {%- assign product_image_width = 'large--seven-twelfths' -%}
  {% endcase %}

  <div class="product-media-templates">
    {% assign featured_media = current_variant.featured_media | default: product.featured_media %}
    {% render 'product-media-templates',
      product: product,
      section_id: section.id,
      featured_media_id: featured_media.id,
      enable_video_loop: section.settings.enable_video_loop
    %}
  </div>

  {% assign style = 'full_width' %}
  {% if section.settings['image-display'] == 'thumbnails' %}
    {% assign style = section.settings.thumbnail_position %}
  {% endif %}
  {% if product.media.size < 2 %}
    {% comment %} No thumbnails {% endcomment %}
    {% assign style = 'full_width' %}
  {% endif %}

  {% assign wrap_product_variant_id = 0 %}
  {% assign wrap_product = false %}
  {% if settings.giftwrap_product_selector != blank %}
    {% assign wrap_product = all_products[settings.giftwrap_product_selector] %}
    {% if wrap_product.variants.first.id %}
      {% assign wrap_product_variant_id = wrap_product.variants.first.id %}
    {% endif %}
  {% endif %}

  {% assign locations_enabled = false %}
  {% if pickup_block %}
    {% assign locations_enabled = true %}
  {% endif %}

  {% assign thumbnail_changes_variant = false %}
  {% if options_block.settings.thumbnail_changes_variant %}
    {% assign thumbnail_changes_variant = true %}
  {% endif %}

  {% if options_block.settings.variant_style == 'swatches' %}
    <safe-load-scripts class="hidden">
      <script
        src="{{ 'component-product-swatch.js' | asset_url }}"
        defer="defer"
        type="module"
        data-flow-load-key="product-swatch"
      ></script>
    </safe-load-scripts>
  {% endif %}

  <div class="wrapper-padded product-form-vue main-page-container product-section">
    <wetheme-product-form
      inline-template
      v-bind:initial-variant-id="{{ current_variant.id }}"
      v-bind:product="product"
      v-bind:product-section="productSection"
      v-bind:theme="theme"
      v-bind:slides-per-view="slidesPerView"
      v-bind:is-featured-product="isFeaturedProduct"
      v-bind:section-id="'{{ section.id }}'"
      v-bind:thumbnail-changes-variant="{{ thumbnail_changes_variant }}"
      v-bind:has-thumbnails="{% if style != 'full_width' %}true{% else %}false{% endif %}"
      v-bind:video-loop-enabled="{{ section.settings.enable_video_loop }}"
      v-bind:cart-method="'{{ settings.ajax_cart_method }}'"
      v-bind:giftwrap-product-variant-id="{{ wrap_product_variant_id }}"
      v-bind:locations-enabled="{{ locations_enabled }}"
      language-url="{{ localization.language.root_url }}"
    >
      <div class="product-single-wrapper">
        <div
          class="grid product-single{% if section.settings.enable_sticky %} product-sticky-wrapper{% endif %}{% if options_block.settings.variant_style == 'dropdowns' %} variant-dropdown-enabled{% else %} variant-swatches-enabled{% endif %}"
          data-section-id="{{ section.id }}"
        >
          <div class="grid__item {{ product_image_width }} context mobile--no-top-margin{% if section.settings.enable_sticky %} product-sticky{% endif %}">
            {% render 'product-media',
              product: product,
              style: style,
              hide_out_of_stock_variants: options_block.settings.hide_out_of_stock_variants
            %}
          </div>

          <div class="grid__item product-form-wrapper {{ product_description_width }}{% if section.settings.enable_sticky %} product-sticky{% endif %}">
            <div>
              <div class="product-details-wrapper">
                <div
                  itemprop="offers"
                  itemscope
                  itemtype="http://schema.org/Offer"
                  class="product-details--form-wrapper{% if product.available %} product-details--form-wrapper---in-stock{% else %} product-details--form-wrapper---out-of-stock{% endif %}"
                >
                  <meta itemprop="priceCurrency" content="{{ shop.currency }}">
                  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
                  <link
                    itemprop="availability"
                    href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}"
                  >

                  <div class="form-vertical">
                    {% form 'product', product, id: 'AddToCartForm' %}
                      {% assign spacing_classes = 'product-form-block' %}

                      {% if settings.enable_breadcrumbs %}
                        <div id="breadcrumbs">
                          {% render 'breadcrumb' %}
                        </div>
                      {% endif %}

                      {%- for block in section.blocks -%}
                        {%- case block.type -%}
                          {%- when '@app' -%}
                            <div
                              class="{{ spacing_classes }}"
                              style="--custom-margin-bottom: {{ section.settings.app_margin_bottom }}px"
                              id="shopify-block-{{block.id}}"
                              {{ block.shopify_attributes }}
                            ></div>

                          {%- when 'complementary-products' -%}
                            <div
                              class="complementary-products hidden {{ spacing_classes }}{% if block.settings.collapsible_tab %} collapsible{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}{% endif %}"
                              style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                              {{ block.shopify_attributes }}
                            >
                              {%- render 'complementary-products-block' with title: block.settings.title, products_limit: block.settings.products_limit, collapsible: block.settings.collapsible_tab, open_close_icon: block.settings.open_close_icon, custom_icon: block.settings.custom_icon, icon: block.settings.icon, id: block.id -%}
                            </div>

                          {%- when 'cross-sells' -%}
                            {% if block.settings.cross_sell_product_1.available
                              or block.settings.cross_sell_product_2.available
                              or block.settings.cross_sell_product_3.available
                            %}
                              <div
                                class="cross-sell {{ spacing_classes }}{% if block.settings.collapsible_tab %} collapsible{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}{% endif %}"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                {%- assign cross_sells_products = block.settings.cross_sell_product_1
                                  | append: ','
                                  | append: block.settings.cross_sell_product_2
                                  | append: ','
                                  | append: block.settings.cross_sell_product_3
                                  | split: ','
                                  | compact
                                -%}
                                <div class="cross-sell-block">
                                  {% unless block.settings.collapsible_tab %}
                                    {% render 'cross-sells' with title: block.settings.title, cross_sells_products: cross_sells_products, id: block.id %}
                                  {% else %}
                                    {% liquid
                                      if block.settings.custom_icon
                                        assign icon = block.settings.custom_icon
                                        assign custom_icon = true
                                      else
                                        assign icon = block.settings.icon
                                        assign custom_icon = false
                                      endif
                                    %}

                                    <div class="collapsible-tab">
                                      <collapsible-button tabindex="0">
                                        <div class="summary">
                                          {% render 'text-with-icon',
                                            icon: icon,
                                            custom_icon: custom_icon,
                                            text: block.settings.title,
                                            text_classes: 'label-font'
                                          %}
                                          <span>
                                            {% if block.settings.open_close_icon == 'plus_minus' %}
                                              {% render 'theme-icon' with icon: 'plus', iconClasses: 'plus-icon' %}
                                              {% render 'theme-icon' with icon: 'minus', iconClasses: 'minus-icon' %}
                                            {% elsif block.settings.open_close_icon == 'caret' %}
                                              {% render 'theme-icon',
                                                icon: 'chevron_down',
                                                iconClasses: 'chevron-down'
                                              %}
                                            {% endif %}
                                          </span>
                                        </div>
                                      </collapsible-button>

                                      <div class="collapsible-content">
                                        <div class="content rte">
                                          {% render 'cross-sells' with title: blank, cross_sells_products: cross_sells_products, id: block.id %}
                                        </div>
                                      </div>
                                    </div>

                                    <safe-load-scripts class="hidden">
                                      <script
                                        src="{{ 'component-collapsible-button.js' | asset_url }}"
                                        type="module"
                                        defer="defer"
                                        data-flow-load-key="component-collapsible-button"
                                      ></script>
                                    </safe-load-scripts>
                                  {% endunless %}
                                </div>
                              </div>
                            {%- endif -%}

                          {%- when 'title' -%}
                            <div
                              class="{{ spacing_classes }}"
                              style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                              {{ block.shopify_attributes }}
                            >
                              <h1 itemprop="name" class="{{ block.settings.title_font }} product-details-product-title">
                                {{ product.title | escape }}
                              </h1>
                            </div>

                          {%- when 'price' -%}
                            <div
                              class="{{ spacing_classes }}"
                              style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                              {{ block.shopify_attributes }}
                            >
                              <div class="product-price-size--{{ block.settings.price_font }} product-price-group">
                                <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
                                <p
                                  id="ComparePrice"
                                  class="compare-at-price sale-price{% if on_sale %} on-sale{% else %} js{% endif %}"
                                  v-bind:class="{ 'on-sale' : isSale }"
                                  v-if="isSale"
                                  v-money="variant.compare_at_price"
                                >
                                  <span
                                    class="money"
                                  >
                                    {{- current_variant.compare_at_price | divided_by: 100 | money -}}
                                  </span>
                                </p>

                                {% render 'product-pricing', current_variant: current_variant %}
                                {% render 'unit-price-measurement-variant', variant: current_variant %}
                              </div>

                              {%- liquid
                                if cart.taxes_included and block.settings.tax_included
                                  assign show_tax_included = true
                                endif
                                if shop.shipping_policy.body != blank and block.settings.shipping_policy
                                  assign show_shipping_policy = true
                                endif
                              -%}
                              {%- if show_tax_included or show_shipping_policy -%}
                                <div class="product-page__policies rte text-link-animated">
                                  {%- if show_tax_included -%}
                                    {{ 'products.product.include_taxes' | t }}
                                  {%- endif -%}
                                  {%- if show_shipping_policy -%}
                                    {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                                  {%- endif -%}
                                </div>
                              {%- endif -%}

                              <div class="shopify-payment-terms__container">
                                {{ form | payment_terms }}
                              </div>
                            </div>

                          {%- when 'vendor' -%}
                            {% if product.vendor != '' %}
                              <div
                                class="{{ spacing_classes }}"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                <span class="product__meta--vendor nav-link-animated">
                                  <span class="label-font">{{ product.vendor | link_to_vendor }}</span>
                                </span>
                              </div>
                            {% endif %}

                          {%- when 'sku' -%}
                            {% if current_variant.sku != blank %}
                              <div
                                class="{{ spacing_classes }} {% if current_variant.sku == "" %}js{% endif %}"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                v-if="variant && variant.sku !== ''"
                              >
                                <span class="js__currentVariantSKU" v-text="variant.sku">
                                  {{- current_variant.sku -}}
                                </span>
                              </div>
                            {% endif %}

                          {%- when 'options' -%}
                            <div
                              class="{{ spacing_classes }}"
                              style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                            >
                              {%
                                render 'product-options' with product: product,
                                size_option_name: block.settings.size_option_name,
                                size_guide_page: block.settings.size_guide_page,
                                variant_style: options_block.settings.variant_style,
                                section_id: section.id,
                                current_variant: current_variant,
                                hide_out_of_stock_variants: options_block.settings.hide_out_of_stock_variants,
                                block_attributes: options_block.shopify_attributes
                              %}
                            </div>

                          {%- when 'linked-products' -%}
                            <safe-load-scripts class="hidden">
                              <script
                                src="{{ 'component-linked-products.js' | asset_url }}"
                                defer="defer"
                                type="module"
                                data-flow-load-key="linked-products"
                              ></script>
                            </safe-load-scripts>

                            {%- if block.settings.linked_products != blank -%}
                              {% assign linked_products_ids = block.settings.linked_products | map: 'id' %}
                              {% unless linked_products_ids.size == 1 and linked_products_ids contains product.id %}
                                {% assign option_index = 0 %}
                                {% assign swatches_aspect_ratio = block.settings.swatches_aspect_ratio %}
                                <linked-products
                                  class="{{ spacing_classes }} linked-products"
                                  style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                  {{ block.shopify_attributes }}
                                >
                                  <div class="swatch linked-products-swatch" data-option-index="{{ option_index }}">
                                    {% if block.settings.option_name != blank %}
                                      <div class="header linked-products--title-wrapper">
                                        <span class="linked-option-label label-font">
                                          {{- block.settings.option_name -}}
                                        </span>
                                        <span class="linked-option-product-title"></span>
                                      </div>
                                    {% endif %}

                                    <div class="swatch-items-wrapper">
                                      {% liquid
                                        for linked_product in block.settings.linked_products
                                          assign escaped_linked_product_variant = linked_product.title | split: ' - ' | last | escape
                                          if linked_product.id == product.id
                                            assign checked = true
                                            assign redirect = blank
                                          else
                                            assign checked = false
                                            assign redirect = linked_product.url
                                          endif
                                          if linked_product.media and linked_product.media.size > 0
                                            assign image_url = linked_product.media[0].preview_image | img_url: '250x'
                                            assign img_aspect_ratio = linked_product.media[0].preview_image.aspect_ratio
                                          elsif linked_product.featured_image != blank
                                            assign image_url = linked_product.featured_image | img_url: '250x'
                                            assign img_aspect_ratio = linked_product.featured_image.aspect_ratio
                                          else
                                            assign image_url = blank
                                            assign img_aspect_ratio = blank
                                          endif
                                          render 'image-swatch', image_url: image_url, value: escaped_linked_product_variant, checked: checked, available: linked_product.available, size: block.settings.swatches_size, aspect_ratio: swatches_aspect_ratio, img_aspect_ratio: img_aspect_ratio, variation_redirect: redirect, section: section, option_index: option_index
                                        endfor
                                      %}
                                    </div>
                                  </div>
                                </linked-products>
                              {% endunless %}
                            {%- endif -%}

                          {%- when 'product-description' -%}
                            {%- if product.description != blank -%}
                              <div
                                class="product-description {{ spacing_classes }}{% if block.settings.collapsible_tab %} product-description--collapsible collapsible{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}{% endif %}"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                {% unless block.settings.collapsible_tab %}
                                  <div class="text-link-animated">{{ product.description }}</div>
                                {% else %}
                                  {% liquid
                                    if block.settings.custom_icon
                                      assign icon = block.settings.custom_icon
                                      assign custom_icon = true
                                    else
                                      assign icon = block.settings.icon
                                      assign custom_icon = false
                                    endif
                                  %}

                                  {% render 'collapsible-tab',
                                    icon: icon,
                                    custom_icon: custom_icon,
                                    heading: block.settings.heading,
                                    content: product.description,
                                    open_close_icon: block.settings.open_close_icon,
                                    open_by_default: false,
                                    heading_classes: 'label-font'
                                  %}
                                {% endunless %}
                              </div>
                            {%- endif -%}

                            {% comment %}
                              {%- when 'separator' -%}
                              <div
                                class="product-form-separator {{ spacing_classes }}"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              ></div>
                            {% endcomment %}

                          {%- when 'collapsible-tab' -%}
                            {% liquid
                              if block.settings.custom_icon
                                assign icon = block.settings.custom_icon
                                assign custom_icon = true
                              else
                                assign icon = block.settings.icon
                                assign custom_icon = false
                              endif
                            %}

                            {% assign content = block.settings.text %}
                            {% if block.settings.page.content %}
                              {% assign content = content | append: block.settings.page.content %}
                            {% endif %}

                            {%- if icon != 'none' or block.settings.heading != blank or content != blank -%}
                              <div
                                class="collapsible-tab-container collapsible {{ spacing_classes }}{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                {% render 'collapsible-tab',
                                  icon: icon,
                                  custom_icon: custom_icon,
                                  heading: block.settings.heading,
                                  content: content,
                                  open_close_icon: block.settings.open_close_icon,
                                  open_by_default: block.settings.open_by_default,
                                  heading_classes: 'label-font'
                                %}
                              </div>
                            {%- endif -%}

                          {%- when 'giftwrap' -%}
                            {%- if settings.giftwrap_product_selector > '' and product.available and wrap_product -%}
                              {% if wrap_product.available %}
                                <div
                                  class="{{ spacing_classes }} product__meta--giftwrap"
                                  style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                  {{ block.shopify_attributes }}
                                >
                                  <div class="product__meta--giftwrap--inner">
                                    <input
                                      type="checkbox"
                                      id="checkbox"
                                      v-model="giftwrapProduct"
                                      class="focus-visible"
                                    >
                                    <label for="checkbox">{{ settings.giftwrap_label_text }}</label>
                                  </div>
                                </div>
                              {% endif %}
                            {%- endif -%}

                            {% comment %}
                              {%- when 'quantity' -%}
                              <div
                                class="{{ spacing_classes }} {% if section.settings.image_size == 'large' %}col-md-12{% else %}col-md-6{% endif %} col-sm-12 col-xs-12"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                <label for="Quantity" class="quantity-selector product-sub-label label-font">
                                  {{- 'products.product.quantity' | t -}}
                                </label>

                                <div class="js-qty">
                                  <button
                                    type="button"
                                    aria-label="-"
                                    class="js-qty__adjust js-qty__adjust--minus icon-fallback-text"
                                    v-on:click="decreaseQuantity"
                                  >
                                    {% render 'theme-icon' with icon: 'minus', iconClasses: 'flex-full', iconAttributes: 'aria-hidden="true"' %}
                                    <span class="fallback-text">−</span>
                                  </button>
                                  <input
                                    v-model="quantity"
                                    type="text"
                                    class="js-qty__num"
                                    value="1"
                                    min="1"
                                    aria-label="quantity"
                                    pattern="[0-9]*"
                                    name="quantity-js"
                                    id="Quantity"
                                  >
                                  <button
                                    type="button"
                                    aria-label="+"
                                    class="js-qty__adjust js-qty__adjust--plus icon-fallback-text"
                                    v-on:click="increaseQuantity"
                                  >
                                    {% render 'theme-icon' with icon: 'plus', iconClasses: 'flex-full', iconAttributes: 'aria-hidden="true"' %}
                                    <span class="fallback-text">+</span>
                                  </button>
                                </div>

                                <noscript>
                                  <input
                                    class="quantity-noscript"
                                    type="number"
                                    name="quantity"
                                    id="Quantity-{{ section.id }}"
                                    aria-label="quantity"
                                    min="1"
                                    value="1"
                                  >
                                </noscript>
                              </div>
                            {% endcomment %}

                          {% when 'product-detail' %}
                            {% render 'product-detail', settings: block.settings %}

                          {% when 'product-materials' %}
                            {% render 'product-materials', settings: block.settings %}

                          {% when 'product-size-guide' %}
                            {% render 'product-size-guide', settings: block.settings %}

                          {% when 'product-shipping-return' %}
                            {% render 'product-shipping-return', settings: block.settings %}

                          {%- when 'buy_buttons' -%}
                            {% render 'product-buy-buttons',
                              block: block,
                              product: product,
                              buttons_block: buttons_block,
                              current_variant: current_variant,
                              routes: routes,
                              settings: settings,
                              form: form
                            %}

                          {%- when 'local_pickup' -%}
                            <div
                              class="{{ spacing_classes }}"
                              style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                              {{ block.shopify_attributes }}
                            >
                              <div
                                class="product-page--local-pickup"
                                v-if="hasLocalPickup"
                                v-html="hasLocalPickup"
                              ></div>
                              <div id="initialPickupInfo">
                                {% render 'store-availability-placeholder' with product_variant: current_variant %}
                              </div>
                            </div>

                          {%- when 'trust_badges' -%}
                            {%- if trust_block.settings['trust-badge'] -%}
                              <div
                                class="{{ spacing_classes }} trust-badge-container"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                {% capture styles %}width: {{ trust_block.settings.trust-badge_max_width | escape }}px;{% endcapture %}
                                {% render 'responsive-image' with trust_block.settings['trust-badge'],
                                  class: 'trust-badge',
                                  alt: '',
                                  blur: false,
                                  styles: styles
                                %}
                              </div>
                            {%- endif -%}

                          {%- when 'product_meta' -%}
                            {%- if product.tags.size > 0 or product.collections.size > 0 or product.type != '' -%}
                              <div
                                class="{{ spacing_classes }} product__meta"
                                style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                                {{ block.shopify_attributes }}
                              >
                                {% if product.tags.size > 0 %}
                                  <div class="product__meta--tags nav-link-animated--custom">
                                    <span
                                      ><strong>{{ 'products.product.tags' | t }}:</strong></span
                                    >
                                    {% for tag in product.tags %}
                                      <a
                                        class="animated-link--item"
                                        href="{{ routes.all_products_collection_url }}/{{ tag | handleize }}"
                                        ><span>{{ tag }}</span></a
                                      >
