{{ 'video-section.css' | asset_url | stylesheet_tag }}

<section id="video-section">
  <div class="video-section-container">
    <div class="video-section-wrapper">
      {{ section.settings.video_thumbnail | image_url: height: 800 | image_tag }}
      <div class="video-section-video">
        <iframe src="{{ section.settings.video_section_url }}" frameborder="0"></iframe>
      </div>
    </div>
    <div class="image-right-side-wrapper">
      {{ section.settings.image_right_side | image_url: height: 400 | image_tag }}
    </div>
    <div class="video-section-title-wrapper">
      <div class="video-section-title-wrapper-content">
        <h2>{{ section.settings.section_title }}</h2>
        <a href="{{ section.settings.section_subtitle_url }}">{{ section.settings.section_subtitle }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "type": "text",
      "id": "video_section_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "video_thumbnail",
      "label": "Video Thumbnail"
    },
    {
      "type": "image_picker",
      "id": "image_right_side",
      "label": "Image Right Side"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "text",
      "id": "section_subtitle_url",
      "label": "Section Subtitle URL"
    }
  ]
}
{% endschema %}
