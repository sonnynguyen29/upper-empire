{{ 'about--team.css' | asset_url | stylesheet_tag }}

<section id="about-team" class="about-team">
  <div class="about-team__container">
    <div class="about-team__wrapper">
      {% for member in section.blocks %}
        <a
          href="{{ member.settings.image.src | image_url }}"
          class="about-team__image-container"
          target="_blank"
          data-pswp-width="{{ member.settings.image.width }}"
          data-pswp-height="{{ member.settings.image.height }}"
        >
          {{
            member.settings.image
            | image_url: width: 1000, height: 1000
            | image_tag: alt: 'Team Member', class: 'about-team__image'
          }}
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  window.addEventListener('load', (event) => {
    function setupLightBoxForTeam() {
      if (typeof setUpUeCollectionPhotoSwipe === 'undefined') {
        const zoomInSVG =
