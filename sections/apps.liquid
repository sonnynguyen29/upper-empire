<div class="homepage-sections-wrapper text-link-animated" data-wetheme-section-id="{{ section.id }}">
	{% if section.settings.include_margins %}
        <div class="wrapper-padded">
    {% endif %}
        
        {%- for block in section.blocks -%}
            {% render block %}
        {%- endfor -%}

    {% if section.settings.include_margins %}
        </div>
    {% endif %}
</div>
  
{% schema %}
{
	"name": "t:sections.apps.name",
	"tag": "section",
	"settings": [
		{
			"type": "checkbox",
			"id": "include_margins",
			"default": true,
			"label": "t:sections.apps.settings.include_margins.label"
		}
	],
	"blocks": [
		{
			"type": "@app"
		}
	],
	"presets": [
		{
			"name": "t:sections.apps.presets.name"
		}
	]
}
{% endschema %}