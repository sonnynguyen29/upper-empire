{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

{% liquid
  assign desktop_sizes = '(min-width: 1920px) 75vw, (min-width: 1440px) 50vw, (min-width: 1280px) 25vw, 100vw'
%}

<section id="hero-banner">
  <div class="hero__banner-container">
    <div class="hero__banner-image-wrapper">
      <div class="hero__banner-image-desktop">
        {% render 'responsive-image' with section.settings.hero_banner_image_desktop, sizes: desktop_sizes %}
      </div>
      <div class="hero__banner-image-mobile">
        {% render 'responsive-image' with section.settings.hero_banner_image_mobile %}
      </div>
    </div>
    <div class="hero__banner-title">{{ section.settings.hero_banner_title }}</div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_banner_image_desktop",
      "label": "Hero Banner Image"
    },
    {
      "type": "image_picker",
      "id": "hero_banner_image_mobile",
      "label": "Hero Banner Image"
    },
    {
      "type": "text",
      "id": "hero_banner_title",
      "label": "Hero Banner Title"
    }
  ]
}
{% endschema %}
